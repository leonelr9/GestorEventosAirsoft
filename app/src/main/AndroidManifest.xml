<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gestoreventosairsoft">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EliminarJogador"
            android:label="@string/title_activity_eliminar_jogador"
            android:parentActivityName=".EditarJogador"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gestoreventosairsoft.EditarJogador" />
        </activity>
        <activity
            android:name=".EditarJogador"
            android:label="@string/title_activity_editar_jogador"
            android:parentActivityName=".JogadorActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gestoreventosairsoft.JogadorActivity" />
        </activity>
        <activity
            android:name=".CriarJogadorActivity"
            android:label="@string/title_activity_criar_jogador"
            android:parentActivityName=".JogadorActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gestoreventosairsoft.JogadorActivity" />
        </activity>
        <activity
            android:name=".JogadorActivity"
            android:label="@string/title_activity_jogador"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gestoreventosairsoft.MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>